{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "rules": {
        "indent": [ "error", 4 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "double" ],
        "semi": [ "error", "always" ],
        "no-unused-vars": ["off"],
        "no-empty": ["off"],
        "no-inner-declarations": ["off"],
        "keyword-spacing": ["error"],
        "no-var": ["error"],
        "no-cond-assign": ["off"],
        "no-useless-escape": ["off"],
        "no-constant-condition": ["off"],
        "for-direction": ["off"]
    },
    "plugins": [
      "local"
    ],
    "globals": {
      "Zotero_File_Interface_Bibliography": false,
      "Components": false,
      "Services": false,
      "Iterator": false,
      "dump": false,
      "APP_SHUTDOWN": false,
      "Zotero": true
    }
}
